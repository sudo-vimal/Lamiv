<Window x:Class="InvoiceApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InvoiceApp"
        mc:Ignorable="d"
        Title="Lamiv Invoice" Height="450" Width="800">
    <Grid >
        <TextBox Name="usernameMain" HorizontalAlignment="Left" Margin="372,144,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120" Background="#FFE1EAEA" Height="24" FontFamily="Times New Roman" FontSize="13" FontWeight="Bold"/>
        <PasswordBox x:Name="passwordMain" HorizontalAlignment="Left" Margin="372,195,0,0" VerticalAlignment="Top" Width="120" Background="#FFE7EDED" Height="24" FontSize="13"/>
        <Label Content="Username" HorizontalAlignment="Left" Margin="276,144,0,0" VerticalAlignment="Top" Width="80" Height="24" FontFamily="Arial" FontSize="13"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="276,195,0,0" VerticalAlignment="Top" Width="80" Height="24" FontFamily="Arial" FontSize="13"/>
        <Button Content="Login" HorizontalAlignment="Left" Margin="402,255,0,0" VerticalAlignment="Top" Width="60" Height="22" Click="Login_Main"/>
        <TextBlock Name="loginErrorMain" HorizontalAlignment="Left" Margin="372,292,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Foreground="#FFBD0F0F" Visibility="Hidden"/>

    </Grid>
</Window>
